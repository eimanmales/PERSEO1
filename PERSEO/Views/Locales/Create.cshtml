@model PERSEO.Models.Locale

@{
    ViewData["Title"] = "Create";
}


<h4>Locales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NLocal" class="control-label"></label>
                <input asp-for="NLocal" class="form-control" />
                <span asp-validation-for="NLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoProducto" class="control-label"></label>
                <select asp-for="CodigoProducto" class ="form-control" asp-items="ViewBag.CodigoProducto"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor" class="control-label"></label>
                <select asp-for="Vendedor" class ="form-control" asp-items="ViewBag.Vendedor"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
