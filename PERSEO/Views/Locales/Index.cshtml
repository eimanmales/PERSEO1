@model IEnumerable<PERSEO.Models.Locale>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-primary" asp-action="Create" title="Nuevo">Nuevo Local</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoProductoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendedorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProductoNavigation.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendedorNavigation.CodigoVendedor)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Movimiento" title="Editar"><i class="fa-solid fa-pencil"></i></a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Movimiento" title="Detalles"><i class="fa-solid fa-sheet-plastic"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Movimiento" title="Eliminar"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
